<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                   android:layout_height="match_parent" android:layout_margin="4dp"
                                   android:clipToPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/format_comments_comment" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/format_comments_img3" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_comment"
                android:id="@+id/format_comments_img3" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/format_comments_img2" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/format_comments_email" app:layout_constraintStart_toEndOf="@+id/format_comments_img2"
                android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/format_comments_img1" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/format_comments_img2"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_person"
                android:id="@+id/format_comments_img1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/ic_email"
                android:id="@+id/format_comments_img2" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/format_comments_img1" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/format_comments_author" app:layout_constraintStart_toEndOf="@+id/format_comments_img1"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/format_comments_img1"
                app:layout_constraintBottom_toBottomOf="@+id/format_comments_img1"/>
        <TextView
                android:text="Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/format_comments_txt1" app:layout_constraintStart_toEndOf="@+id/format_comments_img3"
                android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/format_comments_img3"
                app:layout_constraintBottom_toBottomOf="@+id/format_comments_img3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>